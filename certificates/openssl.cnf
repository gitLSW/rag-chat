[req]
default_bits = 4096
prompt = no
default_md = sha256
x509_extensions = v3_req
distinguished_name = dn

[dn]
C = DE               # Country (e.g., DE for Germany)
ST = Bavaria         # State/Province
L = Eching           # Locality
O = CrossCommerce    # Organization Name
OU = RAG-API         # Organizational Unit Name
CN = 104.171.202.153 # Common Name (can be the IP address, but SAN is primary)

[v3_req]
keyUsage = nonRepudiation, digitalSignature, keyEncipherment
extendedKeyUsage = serverAuth
subjectAltName = IP:104.171.202.153